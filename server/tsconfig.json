{
    "compilerOptions": {
        "strict": true,
        "target": "es2018",
        "lib": ["es2018"],
        "rootDir": "src",
        "outDir": "dist",
        "module": "commonjs",
        "sourceMap": true,
        "experimentalDecorators": true,
        "pretty": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src/**/*.ts"
    ]
}
